{
  "permissions": {
    "allow": [
      "Bash(python3:*)",
      "Bash(python3.11:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(date:*)",
      "Bash(chmod:*)"
    ]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 hooks/memory_capture.py",
            "async": true
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 hooks/guardrail_check.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 hooks/validate_output.py"
          }
        ]
      }
    ]
  }
}
